@{
    ViewData["Title"] = "Home Page";
}
@model Dish

<div class="container-fluid text-center">
    <div class="row">
        <h2>Edit Your Dish</h2>
        <div class="d-flex justify-content-center w-25 mx-auto">
            <a href="/">Home</a>
            <span class="ms-1 me-1"> | </span>
            <a asp-action="DisplayNewDish">Add Dish</a>
        </div>
    </div>


    <form asp-action="Update" asp-controller="Home" asp-route-id="@Model.DishID" class="w-75 mx-auto" method="post">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Name">Name of Dish</span>
                        <input asp-for="Name" class="form-control" type="text" id="Name" value="@Model.Name">
                    </div>
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Chef">Name of Chef</span>
                        <input asp-for="Chef" class="form-control" type="text" id="Chef" value="@Model.Chef">
                        <span asp-validation-for="Chef"></span>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Calories">Calories</span>
                        <input asp-for="Calories" class="form-control" type="number" id="Calories"
                            value="@Model.Calories">
                        <span asp-validation-for="Calories"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Tastiness">Tastiness</span>
                        <select asp-for="Tastiness" class="form-control" type="text" id="Tastiness">
                            <option>Select A Level of Tastiness </option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <span asp-validation-for="Tastiness"></span>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Description"> Description </span>
                        <textarea asp-for="Description" class="form-control" id="Description" cols="20"
                            rows="3">@Model.Description</textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <button class="btn btn-dark w-25 mx-auto" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>